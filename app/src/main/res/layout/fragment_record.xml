<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lkh.a173050061_record_data.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/start_recording"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="Start Recording"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/records_view"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <!--<ToggleButton-->
        <!--android:id="@+id/record_button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="ToggleButton"-->
        <!--android:layout_below="@+id/start_recording"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="11dp" />-->

    <Switch
        android:id="@+id/record_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/records_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="Record" />

    <RadioGroup
        android:id="@+id/record_rg"
        android:layout_height="50dp"
        android:layout_width="320dp"
        android:orientation='horizontal'
        android:gravity="center"
        android:checkedButton="@+id/Stationary"
        android:layout_below="@+id/start_recording"
        android:layout_centerHorizontal="true" >

    <RadioButton
        android:id="@+id/Stationary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:text="Stationary" />
    <RadioButton
        android:id="@+id/Walking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:text="Walking" />
    </RadioGroup>

</RelativeLayout>
